<?xml version="1.0"?>
<ruleset name="My WordPress Project Standards">
    <description>PHPCS configuration for WordPress coding standards</description>

    <!-- Paths to scan -->
    <file>/</file>

    <exclude-pattern>var/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>images/*</exclude-pattern>

    <!-- Use the WordPress standard -->
    <rule ref="WordPress">
        <!-- Disable the "Spaces instead of Tabs" error -->
        <exclude name="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
        <exclude name="WordPress.Files.FileName.InvalidClassFileName" />
    </rule>

    <!-- Optional: Set tab width and encoding -->
    <arg name="tab-width" value="4"/>
    <arg name="encoding" value="utf-8"/>

</ruleset>
